def linear_search(list, n, x):
    for i in range(0, n):
        if (list[i] == x):
            return i
    return -1
list = [2, 3, 4, 10, 40]
x = int(input("Enter an element to search:"))
n = len(list)
result = linear_search(list,n, x)
if (result == -1):
    print("Element is not present in array")
else:
    print("Element is present at index", result)
